<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/r_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Bike Type: "/>
        <EditText
            android:id="@+id/r_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Price per hour: "
            />
        <EditText
            android:id="@+id/r_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>


    <Button
        android:id="@+id/r_register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register bike"/>

    <Button
        android:id="@+id/r_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Bikes"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/r_bike_recycle_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        />
</LinearLayout>